<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/school_seance_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/admin_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="afterDescendants"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp">

            <ImageView
                android:id="@+id/picto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorPrimaryDark"
                android:tint="@color/colorPrimaryDark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_supervisor"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/admin_fullname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="2dp"
                android:text="FULL-NAME ADMIN"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/picto"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimaryDark"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/admin_fullname" />

            <ImageView
                android:id="@+id/adminil_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxHeight="75dp"
                android:minHeight="71dp"
                app:layout_constraintStart_toStartOf="@id/line"
                app:layout_constraintTop_toBottomOf="@id/line"
                app:srcCompat="@mipmap/ic_launcher_round"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/admin_email_picto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:tint="@color/colorPrimary"
                app:layout_constraintStart_toEndOf="@id/adminil_img"
                app:layout_constraintTop_toBottomOf="@id/line"
                app:srcCompat="@drawable/email_picto"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/admin_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:maxWidth="267dp"
                android:text="administrator@admin.ma"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toEndOf="@id/admin_email_picto"
                app:layout_constraintTop_toBottomOf="@id/line"
                app:srcCompat="@drawable/email_picto"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/admin_phone_picto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:tint="@color/colorPrimary"
                app:layout_constraintStart_toEndOf="@id/adminil_img"
                app:layout_constraintTop_toBottomOf="@id/admin_email_picto"
                app:srcCompat="@drawable/phone_picto"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/admin_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:maxWidth="267dp"
                android:text="06XXXXXXXXX"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toEndOf="@id/admin_phone_picto"
                app:layout_constraintTop_toBottomOf="@id/admin_email"
                app:srcCompat="@drawable/email_picto"
                tools:ignore="MissingConstraints" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/editButton"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@color/primaryGreen"
                android:minWidth="30dp"
                android:text="EDIT"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="0dp"
                app:icon="@drawable/edit_white"
                app:layout_constraintEnd_toStartOf="@id/spaceX"
                app:layout_constraintTop_toBottomOf="@id/adminil_img"
                tools:ignore="MissingConstraints" />

            <androidx.legacy.widget.Space
                android:id="@+id/spaceX"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/deleteButton"
                app:layout_constraintTop_toBottomOf="@id/adminil_img"
                tools:ignore="MissingConstraints" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteButton"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@color/colorAccent"
                android:backgroundTint="@color/colorAccent"
                android:maxWidth="15dp"
                android:text="DELETE"
                android:textAlignment="center"
                android:textSize="0dp"
                app:icon="@drawable/delete_white"
                app:layout_constraintStart_toEndOf="@id/spaceX"
                app:layout_constraintTop_toBottomOf="@id/adminil_img"
                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>